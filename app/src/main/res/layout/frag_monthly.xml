<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/monthlyrecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/nodatacheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/nodata"
            android:layout_width="@dimen/nodatasize"
            android:layout_height="@dimen/nodatasize"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_nodata" />

        <me.myatminsoe.mdetect.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nodata"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/nodatatxt"
            android:textColor="@color/nodatacolor"
            android:textSize="17sp" />

    </RelativeLayout>


</RelativeLayout>