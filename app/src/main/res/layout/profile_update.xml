    <LinearLayout
        android:id="@+id/updaterow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updaterow2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="7">

        <me.myatminsoe.mdetect.MMTextView
            android:id="@+id/txtsection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="2dp"
            android:text="@string/section"
            android:textColor="@color/detailtextcolor"
            android:textSize="16sp" />

        <me.myatminsoe.mdetect.MMEditText
            android:id="@+id/updatesection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="@string/section"
            android:padding="2dp"
            android:textSize="16sp" />

    </LinearLayout>

    <me.myatminsoe.mdetect.MMButtonView
        android:id="@+id/btnupdatefordialog"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/updaterow3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/greenbgforpresent"
        android:text="@string/toedit"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>